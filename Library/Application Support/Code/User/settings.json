{
  // --------------------------------------------------
  // Theme Settings
  "workbench.colorTheme": "Tokyo Night",
  "workbench.iconTheme": "eq-material-theme-icons-darker",
  // Theme overrides
  "workbench.colorCustomizations": {
    // https://github.com/enkia/tokyo-night-vscode-theme?tab=readme-ov-file#tokyo-night-and-tokyo-night-storm
    "[Tokyo Night]": {
      // Copilot and Gitlens suggestions colors
      "editorGhostText.foreground": "#e0b068bf",
      // Highlight line color
      "editor.lineHighlightBackground": "#4148687b",

      // Highlight colors when hovering over text
      "editor.wordHighlightBackground": "#ff9d642c",
      "editor.selectionHighlightBackground": "#ff9d642c",
      // Highlight colors when selecting text
      "editor.selectionBackground": "#ff9d645b",

      // Highlight colors when finding text
      "editor.findMatchBackground": "#f7768e83",
      "editor.findMatchHighlightBorder": "#f7768e83",
      "editor.findMatchHighlightBackground": "#f7768e54"
    }
  },

  // --------------------------------------------------
  // General Settings
  "telemetry.telemetryLevel": "off",
  "workbench.startupEditor": "none",
  "terminal.explorerKind": "external",
  "terminal.integrated.enablePersistentSessions": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  },

  // --------------------------------------------------
  // Editor Settings
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.semanticHighlighting.enabled": true,

  // --------------------------------------------------
  // Git Settings
  "git.autofetch": true,
  "git.confirmSync": false,

  // --------------------------------------------------
  // Font Settings
  "editor.fontFamily": "Hack Nerd Font",
  "terminal.integrated.fontFamily": "Hack Nerd Font",

  // --------------------------------------------------
  // Terminal settings
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.cursorBlinking": true,

  // --------------------------------------------------
  // Formatter Settings
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "files.associations": {
    "*.json": "jsonc"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[vue]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "mervin.markdown-formatter"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[graphql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------------------------------------
  // Misc Settings
  "typescript.updateImportsOnFileMove.enabled": "never",

  // --------------------------------------------------
  // Untracked Settings
  // ...
  // Neovim plugin configuration
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  }
}
